{
  "tests": [
    {
      "name": "Register new masseur - email verification required",
      "method": "POST",
      "path": "/?action=register",
      "body": {
        "email": "test-verification@example.com",
        "password": "testpass123",
        "role": "masseur",
        "profile": {
          "full_name": "Иван Иванов",
          "phone": "+7 900 123-45-67",
          "city": "Москва"
        }
      },
      "expectedStatus": 201,
      "expectedBody": {
        "message": "string",
        "email": "string",
        "email_sent": "boolean"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login with unverified user fails",
      "method": "POST",
      "path": "/?action=login",
      "body": {
        "email": "test-verification@example.com",
        "password": "testpass123"
      },
      "expectedStatus": 403,
      "expectedBody": {
        "error": "string",
        "email_verified": false
      },
      "bodyMatcher": "partial"
    }
  ]
}